load("@llvm-project//mlir:tblgen.bzl", "gentbl_cc_library")
load("//bazel:zkx_cc.bzl", "zkx_cc_library")

package(default_visibility = ["//visibility:public"])

gentbl_cc_library(
    name = "passes_inc_gen",
    tbl_outs = {
        "mhlo_passes.h.inc": [
            "-gen-pass-decls",
            "-name=AllMhlo",
        ],
    },
    tblgen = "@llvm-project//mlir:mlir-tblgen",
    td_file = "mhlo_passes.td",
    deps = ["@llvm-project//mlir:PassBaseTdFiles"],
)

zkx_cc_library(
    name = "map_mhlo_to_scalar_op",
    hdrs = ["map_mhlo_to_scalar_op.h"],
    deps = [
        "//zkx/mlir:codegen_utils",
        "//zkx/mlir_hlo/mhlo/IR:mlir_hlo",
        "@llvm-project//mlir:ArithDialect",
        "@llvm-project//mlir:IR",
        "@llvm-project//mlir:Support",
        "@prime_ir//prime_ir/Dialect/EllipticCurve/IR:EllipticCurve",
    ],
)

zkx_cc_library(
    name = "map_stablehlo_to_hlo_op",
    hdrs = ["map_stablehlo_to_hlo_op.h"],
    deps = [
        "//zkx/mlir_hlo/mhlo/IR:mlir_hlo",
        "//zkx/mlir_hlo/stablehlo/dialect:stablehlo_ops",
    ],
)

zkx_cc_library(
    name = "passes",
    hdrs = ["passes.h"],
    deps = [
        ":passes_inc_gen",
        "//zkx/mlir_hlo/mhlo/transforms/convert_to_signless:convert_to_signless_pass",
        "//zkx/mlir_hlo/mhlo/transforms/prepare_for_export",
        "//zkx/mlir_hlo/mhlo/transforms/shape_legalize_to_hlo",
        "//zkx/mlir_hlo/mhlo/transforms/stablehlo_legalize_to_hlo:stablehlo_legalize_to_hlo_pass",
        "//zkx/mlir_hlo/mhlo/transforms/symbolic_shape_optimization",
        "@llvm-project//mlir:FuncDialect",
    ],
)

zkx_cc_library(
    name = "rewriters",
    hdrs = ["rewriters.h"],
    deps = [
        "//zkx/mlir_hlo/mhlo/transforms/stablehlo_legalize_to_hlo",
        "@llvm-project//mlir:IR",
        "@llvm-project//mlir:TransformUtils",
    ],
)
